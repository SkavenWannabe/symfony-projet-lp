<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <script src="https://cdn.tailwindcss.com"></script>
            <link rel="stylesheet" href="https://unpkg.com/@themesberg/flowbite@1.3.0/dist/flowbite.min.css" />
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="border-b-2 border-slate-800 rounded-b p-4 flex justify-between">
            {% block header %}
                {% include "navbar.html.twig" %}
            {% endblock %}
        </header>
        <main class="p-4 pl-8">
            {% block body %}{% endblock %}
        </main>
        <footer class="border-t-2 border-slate-800 rounded-t p-4 text-center">
            {% block footer %}
                <p class="text-xl">{% trans %}base.footer.slogan{% endtrans %}</p>
                <p class="text-gray-700">{% trans %}base.footer.copyright{% endtrans %}</p>
            {% endblock %}
        </footer>
        <script src="https://unpkg.com/@themesberg/flowbite@1.3.0/dist/flowbite.bundle.js"></script>
    </body>
</html>
