{% extends "base.html.twig" %}

{% block title %}
    l'E-Gume site e-commerce
{% endblock %}
{% block body %}
    <h1 class="text-2xl border-b border-slate-700">Bienvenue sur la boutique l'E-Gume</h1>

    <a class="border border-slate-700 rounded p-2 m-4 block w-fit hover:bg-green-400" href="{{ path('boutique') }}">retour aux catégories</a>
    <div class="flex">
        {% for produit in  produits  %}
            <div class="p-4 border border-slate-700 rounded m-4 text-center justify-center hover:bg-green-400 ">
                <a href="{{ path('panier_ajouter', {'idProduit': produit.id}) }}">
                    <img class="m-auto rounded-xl" src="{{ asset(produit.visuel) }}" alt="">
                    <h2 class="text-lg">{{ produit.libelle }}</h2>
                    <p>{{ produit.texte }}</p>
                    <p>Prix : {{ produit.prix }}€/kg</p>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}